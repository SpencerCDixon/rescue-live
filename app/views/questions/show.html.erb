<%= @question.title %>
<%= @question.body %>

<%= form_for [@question, @answer] do |f| %>
  <%= f.label :body %>
  <%= f.text_field :body %>

  <%= f.submit 'Create Answer', class: "button tiny success" %>
<% end %>

<%= button_to 'Delete', question_path(@question), method: :delete, class: "button tiny alert" %>

<ul>
  <% @answers.each do |answer| %>
    <li id=<%= answer.id %>><%= answer.body %></li>
  <% end %>
</ul>

